{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src","."],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "composite": true,
    "incremental": true,
      "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
